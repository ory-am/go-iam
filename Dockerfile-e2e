FROM golang:1.15.2-alpine3.12

ARG git_tag
ARG git_commit

RUN apk add --no-cache git build-base

WORKDIR /go/src/github.com/ory/hydra

ENV GO111MODULE=on

ADD . .

RUN go install .
RUN go build -buildmode=plugin -tags sqlite -o /memtest.so ./test/e2e/plugin/memtest.go

ENTRYPOINT ["hydra"]

CMD ["serve", "all"]
